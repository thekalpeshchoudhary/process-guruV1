{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@components/*": ["src/components/*"],
      // "@datatypes/*": ["src/datatypes/*"],
      "@styles/*": ["styles/*"],
      "@public/*": ["public/*"],
      // "@hooks/*": ["src/hooks/*"],
      // "@stories/*": ["src/stories/*"],
      // "@staticData/*": ["src/staticData/*"],
      // "@network/*": ["src/network/*"],
      // "@redux/*": ["src/redux/*"],
      // "@config/*": ["src/config/*"],
      // "@i18n": ["./i18n"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
  },
  "include": ["pages", "./.eslintrc.json", "./**/*"],
  "exclude": ["node_modules"],
}
