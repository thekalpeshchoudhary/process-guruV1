{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@components/*": ["src/components/*"],
      "@styles/*": ["styles/*"],
      "@public/*": ["public/*"],
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
  },
  "include": ["pages", "./.eslintrc.json", "./**/*"],
  "exclude": ["node_modules"],
}
